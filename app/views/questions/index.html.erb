<div>
  <ul>
    <% @questions.each do |question| %>
    <li>
      <h4><a href="/questions/<%= question.id %>"><%= question.title  %></a> </h4>
      <p><%= question.prompt  %></p>
       <%= link_to "Answer this question", new_answer_path(question.id) %>
       <%= link_to "See other answers", answers_path(:question => question.id) %>
    </li>
    <% end %>
  </ul>
</div>
